{% set mainClasses = "app-container govuk-body" %}

{% block content %}

  <h1>Next session</h1>

  {{ govukButton({
    text: "View details",
    href: paths.sessions.show({ projectCode: 'N56123456', date: '2025-09-22' }),
    isStartButton: true
  }) }}

  <h2>Person details</h2>

  {{ govukButton({
    text: "View person details",
    href: paths.appointments.personDetails({ projectCode: 'N56123456', appointmentId: '2500629219' })
  }) }}

{% endblock %}
