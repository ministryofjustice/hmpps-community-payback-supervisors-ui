{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% from "../../showErrorSummary.njk" import showErrorSummary %}

{% extends "../../partials/layout.njk" %}

{% set mainClasses = "app-container govuk-body" %}
{% if formButtonText is not defined %}
  {% set formButtonText = "Confirm and continue" %}
{% endif %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backLink
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
      {{ showErrorSummary(errorSummary) }}

      {% if successMessages %}
        {% for message in successMessages %}
          {{ govukNotificationBanner({
                html: '<h3 class="govuk-!-margin-top-2">' + message + '</h3>',
                type: 'success',
                titleId: 'success-title'
              }) }}
        {% endfor %}
      {% endif %}

      {% block beforeForm %}{% endblock %}

      <form action="{{ updatePath }}" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        {% block formContent %}
        {% endblock %}

        {{ govukButton({
        text: formButtonText
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
